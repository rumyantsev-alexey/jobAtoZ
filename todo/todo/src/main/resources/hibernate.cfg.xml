<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:postgresql://localhost:5432/cars</property> <!-- BD Mane -->
        <property name="connection.driver_class">org.postgresql.Driver</property> <!-- DB Driver -->
        <property name="connection.username">postgres</property> <!-- DB User -->
        <property name="connection.password">tester</property> <!-- DB Password -->

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>

        <property name="hibernate.show_sql">true</property>

        <!--        <mapping resource="ru/job4j/todo/ToDo.hbm.xml"/>-->
        <!--        <mapping resource="cars/all-for-car.xml"/> -->
        <mapping class="ru.job4j.cars.BodytypeEntity"/>
        <mapping class="ru.job4j.cars.CarEntity"/>
        <mapping class="ru.job4j.cars.CityEntity"/>
        <mapping class="ru.job4j.cars.DriveunitEntity"/>
        <mapping class="ru.job4j.cars.EnginestypeEntity"/>
        <mapping class="ru.job4j.cars.FotoEntity"/>
        <mapping class="ru.job4j.cars.MarkEntity"/>
        <mapping class="ru.job4j.cars.ModelEntity"/>
        <mapping class="ru.job4j.cars.TransmissionEntity"/>
        <mapping class="ru.job4j.cars.UsersEntity"/>
        <mapping class="ru.job4j.cars.WheelEntity"/>

    </session-factory>
</hibernate-configuration>